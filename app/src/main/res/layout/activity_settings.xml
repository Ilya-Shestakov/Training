<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_act_desine"
    tools:context=".HalperBtn.Settings">

    <LinearLayout
        android:id="@+id/layoutWithBtnsMachine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnGoBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnAllTrainers"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/desine_osn_btn"

            android:backgroundTint="@null"
            android:baselineAligned="false"
            app:layout_constraintEnd_toEndOf="@+id/topBlock"
            app:layout_constraintStart_toStartOf="@+id/topBlock"
            app:layout_constraintTop_toBottomOf="@+id/topBlock">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="All trainers"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnLegs"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/desine_osn_btn"

            android:backgroundTint="@null"
            android:baselineAligned="false"
            app:layout_constraintEnd_toEndOf="@+id/topBlock"
            app:layout_constraintStart_toStartOf="@+id/topBlock"
            app:layout_constraintTop_toBottomOf="@+id/topBlock">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="Legs"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnHands"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/desine_osn_btn"

            android:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/topBlock"
            app:layout_constraintStart_toStartOf="@+id/topBlock"
            app:layout_constraintTop_toBottomOf="@+id/btnLegs">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="Hands"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnBack"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/desine_osn_btn"

            android:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/topBlock"
            app:layout_constraintStart_toStartOf="@+id/topBlock"
            app:layout_constraintTop_toBottomOf="@+id/btnHands">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnBosom"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/desine_osn_btn"

            android:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/topBlock"
            app:layout_constraintStart_toStartOf="@+id/topBlock"
            app:layout_constraintTop_toBottomOf="@+id/btnBack">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="Bosom"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnGoBack"
        android:onClick="btnToBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/layoutWithBtnsMachine"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shadow_and_border"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_keyboard_backspace_24"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>