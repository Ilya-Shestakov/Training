<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:background="@color/background_btn_Bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_act_desine"
        >

<!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            android:id="@+id/topBlock"-->
<!--            android:layout_width="match_parent"-->
<!--            android:background="@drawable/desine_top_block"-->
<!--            android:layout_height="150dp">-->

            <TextView
                android:id="@+id/TitleTrains"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginTop="45dp"
                android:background="@null"

                android:backgroundTint="@null"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="Trainings"
                android:textColor="@color/black"

                android:textSize="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleTrains">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnTraining"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/desine_osn_btn"

                android:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="@+id/topBlock"
                app:layout_constraintStart_toStartOf="@+id/topBlock"
                app:layout_constraintTop_toBottomOf="@+id/btnBack">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center"
                    android:text="New training"
                    android:textColor="@color/black"
                    android:textSize="35dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <HorizontalScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnCalendar"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/desine_btns"

                        android:backgroundTint="@null"
                        android:baselineAligned="false">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:fontFamily="@font/baloo_bhai"
                            android:gravity="center"
                            android:text="Calendar"
                            android:textColor="@color/black"
                            android:textSize="30dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnAll"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/desine_btns"
                        android:layout_marginHorizontal="10dp"

                        android:backgroundTint="@null"
                        android:baselineAligned="false">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:fontFamily="@font/baloo_bhai"
                            android:gravity="center"
                            android:text="All trainers"
                            android:textColor="@color/black"
                            android:textSize="30dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnBio"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/desine_btns"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@null"
                        android:baselineAligned="false">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:fontFamily="@font/baloo_bhai"
                            android:gravity="center"
                            android:text="Edit Bio"
                            android:textColor="@color/black"
                            android:textSize="30dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnLegs"
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/desine_osn_btn"

                    android:backgroundTint="@null"
                    android:baselineAligned="false"
                    app:layout_constraintEnd_toEndOf="@+id/topBlock"
                    app:layout_constraintStart_toStartOf="@+id/topBlock"
                    app:layout_constraintTop_toBottomOf="@+id/topBlock">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Legs"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnHands"
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/desine_osn_btn"

                    android:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/topBlock"
                    app:layout_constraintStart_toStartOf="@+id/topBlock"
                    app:layout_constraintTop_toBottomOf="@+id/btnLegs">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Hands"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnBack"
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/desine_osn_btn"

                    android:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/topBlock"
                    app:layout_constraintStart_toStartOf="@+id/topBlock"
                    app:layout_constraintTop_toBottomOf="@+id/btnHands">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnBosom"
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/desine_osn_btn"

                    android:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/topBlock"
                    app:layout_constraintStart_toStartOf="@+id/topBlock"
                    app:layout_constraintTop_toBottomOf="@+id/btnBack">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Bosom"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


<!--            <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                android:id="@+id/btnMore"-->
<!--                android:layout_width="270dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/desine_osn_btn"-->

<!--                app:layout_constraintEnd_toEndOf="@+id/topBlock"-->
<!--                app:layout_constraintStart_toStartOf="@+id/topBlock"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/btnBack">-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->

<!--                    android:layout_marginHorizontal="10dp"-->
<!--                    android:fontFamily="@font/baloo_bhai"-->
<!--                    android:gravity="center"-->
<!--                    android:text="More"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="30dp" />-->
<!--            </androidx.constraintlayout.widget.ConstraintLayout>-->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        />

</androidx.drawerlayout.widget.DrawerLayout>